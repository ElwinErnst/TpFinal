<h1>Inscriptions</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">State</th>
      <th scope="col">Payment</th>
      <th scope="col">Event</th>
      <th scope="col">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if not current_user.admin? %>

    <tbody>
      <% @inscriptions.where(:user => current_user).each do | inscription | %> <!--#{ } es lo mismo que un print(f,"{}") en python -->
        <tr>
          <td><%= inscription.states %></td>
          <td><%= inscription.payment %></td>
          <td><%= inscription.event.name %></td>
          <td><%= inscription.user.email %></td>
          <td><%= link_to 'Show', inscription %></td>
          <td><%= link_to 'Edit', edit_inscription_path(inscription) %></td>
          <td><%= link_to 'Destroy', inscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif current_user.admin? %>
    <tbody>
      <% @inscriptions.each do | inscription | %>
        <tr>
          <td><%= inscription.states %></td>
          <td><%= inscription.payment %></td>
          <td><%= inscription.event.name %></td>
          <td><%= inscription.user.email %></td>
          <td><%= link_to 'Show', inscription %></td>
          <td><%= link_to 'Edit', edit_inscription_path(inscription) %></td>
          <td><%= link_to 'Destroy', inscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
<%= paginate @inscriptions %>
