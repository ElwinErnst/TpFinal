<h1>Meets</h1>

<table>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Date</th>
        <th scope="col">Start time</th>
        <th scope="col">End time</th>
        <th scope="col">Event</th>
        <th scope="col">Speaker</th>
        <th colspan="3"> </th>
      </tr>
    </thead>
    <tbody>
      <% @meets.each do |meet| %>
        <tr>
            <td scope="row"><%= meet.name %></td>
            <td scope="row"><%= meet.date %></td>
            <td scope="row"><%= meet.start_time %></td>
            <td scope="row"><%= meet.end_time %></td>
            <td scope="row"><%= meet.event.name %></td>
            <td scope="row"><%= meet.speaker.last_name %></td>
            <td><%= link_to 'Show', meet %></td>  
            <td><%= link_to 'Edit', edit_meet_path(meet) %></td>
            <td><%= link_to 'Destroy', meet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  <%= paginate @meets %>
<br>

<%= link_to 'New Meet', new_meet_path, class: 'btn btn-primary'%>
