<br>

<h1>Themes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @themes.each do |theme| %>
      <tr>
          <td scope="row"><%= theme.name %></td>
          <td scope="row"><%= theme.description %></td>
          <td scope="row"><%= theme.category.name %></td>
          <td><%= link_to 'Show', theme %></td>
          <td><%= link_to 'Edit', edit_theme_path(theme) %></td>
          <td><%= link_to 'Destroy', theme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @themes %>
<br>

<%= link_to 'New Theme', new_theme_path, class: 'btn btn-primary' if can? :create, Theme %>
